{
  "name": "Project dev container for leader-labeler",
  "image": "mcr.microsoft.com/devcontainers/base:trixie",
  "features": {
    "ghcr.io/devcontainers/features/node:1.6.3": {
      "version": "24"
    },
    "ghcr.io/devcontainers/features/go:1.3.2": {
      "version": "1.25",
      "golangciLintVersion": "2.7.2"
    },
    "ghcr.io/devcontainers/features/common-utils:2.5.5": {
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true,
      "upgradePackages": true,
      "username": "automatic"
    },
    "ghcr.io/devcontainers-extra/features/claude-code:1.0.0": {
      "version": "v2.0.74"
    },
    "ghcr.io/middlendian/devcontainer-features/sudo-network-sandbox:0.1.0": {
      "allowedDomains": "api.anthropic.com, api.github.com"
    },
    "ghcr.io/azutake/devcontainer-features/go-packages-install:0.0.2": {
      "PACKAGES": "github.com/hashicorp/copywrite@v0.22.0"
    }
  },
  "containerUser": "vscode",
  "remoteUser": "vscode",
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "COLORTERM": "truecolor",
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude"
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/mounts/.zsh_history,target=/home/vscode/.zsh_history,type=bind,consistency=delegateed",
    "source=${localWorkspaceFolder}/.claude,target=/home/vscode/.claude,type=bind,consistency=delegated"
  ],
  "initializeCommand": "touch ${localWorkspaceFolder}/.devcontainer/mounts/.zsh_history",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace"
}
